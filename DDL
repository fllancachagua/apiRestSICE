
  CREATE TABLE "MAESTRAS"."TBL_PERSONAS" 
   (	"PERSONA_ID" NUMBER(10,0) NOT NULL ENABLE, 
	"TIPO_DOCUMENTO_ID" NUMBER(10,0) NOT NULL ENABLE, 
	"NRO_DOCUMENTO" VARCHAR2(10 BYTE), 
	"AP_PATERNO" VARCHAR2(200 BYTE), 
	"AP_MATERNO" VARCHAR2(200 BYTE) DEFAULT null, 
	"AP_CASADA" VARCHAR2(200 BYTE), 
	"NOMBRES" VARCHAR2(200 BYTE), 
	"DIRECCION" VARCHAR2(200 BYTE), 
	"UBG_DEPARTAMENTO" VARCHAR2(4 BYTE), 
	"UBG_PROVINCIA" VARCHAR2(4 BYTE), 
	"UBG_DISTRITO" VARCHAR2(4 BYTE), 
	"NOM_DEPARTAMENTO" VARCHAR2(60 BYTE), 
	"NOM_PROVINCIA" VARCHAR2(60 BYTE), 
	"NOM_DISTRITO" VARCHAR2(60 BYTE), 
	"SEXO" CHAR(1 BYTE), 
	"ESTADO_CIVIL" CHAR(1 BYTE), 
	"FECHA_NACIMIENTO" DATE, 
	"NOM_PADRE" VARCHAR2(60 BYTE), 
	"NOM_MADRE" VARCHAR2(60 BYTE), 
	"FECHA_FALLECIMIENTO" DATE, 
	"FECHA_CADUCIDAD" DATE, 
	"FECHA_REGISTRO" DATE DEFAULT sysdate, 
	"USUARIO_REGISTRO" VARCHAR2(20 BYTE), 
	"FECHA_MODIFICACION" DATE, 
	"USUARIO_MODIFICACION" VARCHAR2(20 BYTE), 
	"FLAG_VALIDADO_RENIEC" CHAR(1 BYTE), 
	"ESTADO" CHAR(1 BYTE) NOT NULL ENABLE, 
	"RESTRICCION" VARCHAR2(5 BYTE), 
	"CORREO" VARCHAR2(50 BYTE), 
	"TELF_FIJO" VARCHAR2(20 BYTE), 
	"TELF_MOVIL" VARCHAR2(20 BYTE), 
	 CONSTRAINT "NRO_DOCUMNT_TIP_DOCUMNT_ID_UK" UNIQUE ("TIPO_DOCUMENTO_ID", "NRO_DOCUMENTO")
  USING INDEX PCTFREE 10 INITRANS 2 MAXTRANS 255 COMPUTE STATISTICS 
  STORAGE(INITIAL 65536 NEXT 1048576 MINEXTENTS 1 MAXEXTENTS 2147483645
  PCTINCREASE 0 FREELISTS 1 FREELIST GROUPS 1
  BUFFER_POOL DEFAULT FLASH_CACHE DEFAULT CELL_FLASH_CACHE DEFAULT)
  TABLESPACE "TBS_MAESTRAS_DAT"  ENABLE, 
	 CONSTRAINT "PERSONA_ID" PRIMARY KEY ("PERSONA_ID")
  USING INDEX PCTFREE 10 INITRANS 2 MAXTRANS 255 COMPUTE STATISTICS 
  STORAGE(INITIAL 65536 NEXT 1048576 MINEXTENTS 1 MAXEXTENTS 2147483645
  PCTINCREASE 0 FREELISTS 1 FREELIST GROUPS 1
  BUFFER_POOL DEFAULT FLASH_CACHE DEFAULT CELL_FLASH_CACHE DEFAULT)
  TABLESPACE "TBS_MAESTRAS_DAT"  ENABLE, 
	 CONSTRAINT "TIPO_DOCUMENTO_ID_FK" FOREIGN KEY ("TIPO_DOCUMENTO_ID")
	  REFERENCES "MAESTRAS"."TBL_TIPO_DOCUMENTOS" ("TIPO_DOCUMENTO_ID") ENABLE
   ) SEGMENT CREATION IMMEDIATE 
  PCTFREE 10 PCTUSED 40 INITRANS 1 MAXTRANS 255 
 NOCOMPRESS LOGGING
  STORAGE(INITIAL 65536 NEXT 1048576 MINEXTENTS 1 MAXEXTENTS 2147483645
  PCTINCREASE 0 FREELISTS 1 FREELIST GROUPS 1
  BUFFER_POOL DEFAULT FLASH_CACHE DEFAULT CELL_FLASH_CACHE DEFAULT)
  TABLESPACE "TBS_MAESTRAS_DAT" ;

   COMMENT ON COLUMN "MAESTRAS"."TBL_PERSONAS"."PERSONA_ID" IS 'ID DE TABLA';
   COMMENT ON COLUMN "MAESTRAS"."TBL_PERSONAS"."TIPO_DOCUMENTO_ID" IS 'TIPO DE DOCUMENTO->  1: DNI, 2: CE, 3:PASAPORTE';
   COMMENT ON COLUMN "MAESTRAS"."TBL_PERSONAS"."NRO_DOCUMENTO" IS 'NRO DE DOCUMENTO';
   COMMENT ON COLUMN "MAESTRAS"."TBL_PERSONAS"."AP_PATERNO" IS 'APELLIDO PARTERNO';
   COMMENT ON COLUMN "MAESTRAS"."TBL_PERSONAS"."AP_MATERNO" IS 'APELLIDO MATERNO';
   COMMENT ON COLUMN "MAESTRAS"."TBL_PERSONAS"."AP_CASADA" IS 'APELLIDO DE CASADA';
   COMMENT ON COLUMN "MAESTRAS"."TBL_PERSONAS"."NOMBRES" IS 'NOMBRES';
   COMMENT ON COLUMN "MAESTRAS"."TBL_PERSONAS"."DIRECCION" IS 'DIRECCION DOMICILIO';
   COMMENT ON COLUMN "MAESTRAS"."TBL_PERSONAS"."UBG_DEPARTAMENTO" IS 'CODIGO DEL DEPARTAMENTO DE NACIMIENTO';
   COMMENT ON COLUMN "MAESTRAS"."TBL_PERSONAS"."UBG_PROVINCIA" IS 'CODIGO DE LA PROVINCIA DEL DEPARTAMENTO';
   COMMENT ON COLUMN "MAESTRAS"."TBL_PERSONAS"."UBG_DISTRITO" IS 'CODIGO DEL DISTRITO DEL DEPARTAMENTO';
   COMMENT ON COLUMN "MAESTRAS"."TBL_PERSONAS"."NOM_DEPARTAMENTO" IS 'NOMBRE DEL DEPARTAMENTO DE NACIMIENTO';
   COMMENT ON COLUMN "MAESTRAS"."TBL_PERSONAS"."NOM_PROVINCIA" IS 'NOMBRE DE LA PROVINCIA DEL DEPARTAMENTO';
   COMMENT ON COLUMN "MAESTRAS"."TBL_PERSONAS"."NOM_DISTRITO" IS 'NOMBRE DEL DISTRITO DEL DEPARTAMENTO';
   COMMENT ON COLUMN "MAESTRAS"."TBL_PERSONAS"."SEXO" IS 'CODIGO DEL SEXO';
   COMMENT ON COLUMN "MAESTRAS"."TBL_PERSONAS"."ESTADO_CIVIL" IS 'CODIGO ESTADO CIVIL';
   COMMENT ON COLUMN "MAESTRAS"."TBL_PERSONAS"."FECHA_NACIMIENTO" IS ' FECHA NACIMIENTO';
   COMMENT ON COLUMN "MAESTRAS"."TBL_PERSONAS"."FECHA_REGISTRO" IS 'FECHA DE REGISTRO EN LA BASE DE DATOS';
   COMMENT ON COLUMN "MAESTRAS"."TBL_PERSONAS"."USUARIO_REGISTRO" IS 'USUARIO REALIZA EL REGISTRO';
   COMMENT ON COLUMN "MAESTRAS"."TBL_PERSONAS"."FECHA_MODIFICACION" IS 'FECHA DE MODIFICACION EN LA BASE DE DATOS';
   COMMENT ON COLUMN "MAESTRAS"."TBL_PERSONAS"."USUARIO_MODIFICACION" IS 'USUARIO QUE MODIFICA EL REGISTRO';
   COMMENT ON COLUMN "MAESTRAS"."TBL_PERSONAS"."FLAG_VALIDADO_RENIEC" IS '1:VALIDADO POR RENIEC, 0: NO VALIDADO POR RENIEC';
   COMMENT ON COLUMN "MAESTRAS"."TBL_PERSONAS"."ESTADO" IS 'S:VALIDO, N:INVALIDO';
   COMMENT ON COLUMN "MAESTRAS"."TBL_PERSONAS"."RESTRICCION" IS 'S:VALIDO, N:INVALIDO';
   COMMENT ON COLUMN "MAESTRAS"."TBL_PERSONAS"."CORREO" IS 'CORREO ELECTRONICO DE LA PERSONA';
   COMMENT ON COLUMN "MAESTRAS"."TBL_PERSONAS"."TELF_FIJO" IS 'TELEFONO FIJO';
   COMMENT ON COLUMN "MAESTRAS"."TBL_PERSONAS"."TELF_MOVIL" IS 'TELEFONO MOVIL';



   CREATE SEQUENCE  "MAESTRAS"."SEQ_PERSONAS_ID"  MINVALUE 1 MAXVALUE 9999999999999999999999999999 INCREMENT BY 1 START WITH 351 NOCACHE  NOORDER  NOCYCLE  NOPARTITION ;
